{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],  
      "@hooks/*": ["src/hooks/*"],  
      "@ui/*": ["src/components/ui/*"], 
      "@lib/*": ["src/lib/*"],
      "@actions/*": ["src/actions/*"],
      "@context/*": ["src/context/*"],
      "@lib/utils": ["src/lib/utils"],
      "@schemas/*": ["src/schemas/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts",".next/types/**/*.ts",
    "src/**/*",
    "pages/**/*",
    "components/**/*",
    "types/**/*",
    "utils/**/*",
    "hooks/**/*",
    "context/**/*"],
  "exclude": ["node_modules"]
}
